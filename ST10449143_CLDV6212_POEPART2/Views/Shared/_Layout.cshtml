<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #ff6a00 !important;
        }

        .user-welcome {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 5px 15px;
            margin-right: 10px;
        }

        .nav-link {
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #ff6a00 !important;
            }

        .role-badge {
            font-size: 0.7em;
            padding: 2px 8px;
        }

        .dropdown-item {
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background-color: #ff6a00;
                color: white;
            }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .cart-badge {
            font-size: 0.6em;
            padding: 2px 6px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store me-2"></i>ABC Retail
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>

                        <!-- Show these links to all authenticated users -->
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-box me-1"></i>Products
                                </a>
                            </li>

                            <!-- Cart link for customers -->
                            @if (Context.Session.GetString("Role") != "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                        <i class="fas fa-shopping-cart me-1"></i>Cart
                                        <span id="cartBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge"
                                              style="display: none;">
                                            0
                                        </span>
                                    </a>
                                </li>

                                <!-- Customer orders link -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="Index">
                                        <i class="fas fa-history me-1"></i>My Orders
                                    </a>
                                </li>
                            }

                            <!-- Admin-only links -->
                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog me-1"></i>Admin Panel
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Customer" asp-action="Index">
                                                <i class="fas fa-users me-2"></i>Manage Customers
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                                                <i class="fas fa-box me-2"></i>Manage Products
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                                                <i class="fas fa-shopping-cart me-2"></i>Manage All Orders
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">
                                <i class="fas fa-envelope me-1"></i>Contact
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- User Authentication Section -->
                    <div class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {
                            <!-- User is logged in - Enhanced User Dropdown -->
                            <div class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="user-welcome text-light me-2">
                                        <i class="fas fa-user-circle me-1"></i>
                                        @Context.Session.GetString("Username")
                                        <span class="badge @(Context.Session.GetString("Role") == "Admin" ? "bg-warning" : "bg-info") role-badge ms-1">
                                            @Context.Session.GetString("Role")
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <small class="text-muted">Signed in as</small><br>
                                            <strong>@Context.Session.GetString("Username")</strong>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-user me-2"></i>My Profile
                                        </a>
                                    </li>
                                    @if (Context.Session.GetString("Role") == "Customer")
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                                                <i class="fas fa-shopping-cart me-2"></i>My Cart
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="Index">
                                                <i class="fas fa-history me-2"></i>Order History
                                            </a>
                                        </li>
                                    }
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-cog me-2"></i>Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item border-0 bg-transparent w-100 text-start">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <!-- User is not logged in -->
                            <div class="d-flex align-items-center gap-2">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-2 fs-5"></i>
                        <div class="flex-grow-1">@TempData["Success"]</div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle me-2 fs-5"></i>
                        <div class="flex-grow-1">@TempData["Error"]</div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg-dark text-light mt-5">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h6 class="text-warning mb-2">
                        <i class="fas fa-store me-2"></i>ABC Retail
                    </h6>
                    <p class="mb-0 text-light opacity-75">
                        Your trusted partner for quality products and exceptional service.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex flex-column flex-md-row justify-content-md-end gap-2">
                        <a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">
                            <i class="fas fa-shield-alt me-1"></i>Privacy Policy
                        </a>
                        <span class="d-none d-md-inline text-light opacity-50">|</span>
                        <a asp-controller="Home" asp-action="Contact" class="text-light text-decoration-none">
                            <i class="fas fa-envelope me-1"></i>Contact Us
                        </a>
                        <span class="d-none d-md-inline text-light opacity-50">|</span>                        
                    </div>
                    <p class="mb-0 mt-2 text-light opacity-75">
                        &copy; ABC Retail. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Enhanced Session and Navigation Scripts -->
    <script>
        // Update cart summary in navbar
        function updateCartSummary() {
            fetch('@Url.Action("GetCartSummary", "Cart")')
                .then(response => response.json())
                .then(data => {
                    const cartBadge = document.getElementById('cartBadge');
                    if (cartBadge) {
                        cartBadge.textContent = data.itemCount;
                        cartBadge.style.display = data.itemCount > 0 ? 'inline' : 'none';
                    }
                })
                .catch(error => console.error('Error updating cart summary:', error));
        }

        // Enhanced active link highlighting
        document.addEventListener('DOMContentLoaded', function() {
            const currentUrl = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link:not(.dropdown-toggle)');
            let activeLinkFound = false;

            // First pass: exact matches
            navLinks.forEach(link => {
                const linkUrl = link.getAttribute('href');
                if (linkUrl === currentUrl) {
                    link.classList.add('active');
                    link.style.fontWeight = '600';
                    link.style.color = '#ff6a00';
                    activeLinkFound = true;
                }
            });

            // Second pass: partial matches if no exact match found
            if (!activeLinkFound) {
                navLinks.forEach(link => {
                    const linkUrl = link.getAttribute('href');
                    if (linkUrl && linkUrl !== '/' && currentUrl.startsWith(linkUrl)) {
                        link.classList.add('active');
                        link.style.fontWeight = '600';
                        link.style.color = '#ff6a00';
                    }
                });
            }

            // Home page special case
            if (currentUrl === '/' || currentUrl === '/Home' || currentUrl === '/Home/Index') {
                const homeLink = document.querySelector('a[href="/"], a[href="/Home"], a[href="/Home/Index"]');
                if (homeLink) {
                    homeLink.classList.add('active');
                    homeLink.style.fontWeight = '600';
                    homeLink.style.color = '#ff6a00';
                }
            }

            // Update cart summary on page load
            updateCartSummary();

            
            setInterval(updateCartSummary, 30000);
        });

        // Global notification function (without auto-dismiss)
        function showNotification(message, type) {
            
            const existingNotifications = document.querySelectorAll('.global-notification');
            existingNotifications.forEach(notification => notification.remove());

            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed global-notification`;
            notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            notification.innerHTML = `
                <div class="d-flex align-items-center">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    <div class="flex-grow-1">${message}</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            document.body.appendChild(notification);
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>