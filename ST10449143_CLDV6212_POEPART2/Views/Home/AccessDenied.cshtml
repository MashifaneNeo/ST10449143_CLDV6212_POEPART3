@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body py-5">
                    <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                    <h2 class="text-danger">Access Denied</h2>
                    <p class="lead">You don't have permission to access this page.</p>
                    <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home"></i> Go Home
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt"></i> Login with Different Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>