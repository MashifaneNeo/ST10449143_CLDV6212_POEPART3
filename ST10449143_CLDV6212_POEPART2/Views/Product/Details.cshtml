@model ST10449143_CLDV6212_POEPART1.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box-open"></i> Product Details</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Products
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center bg-light">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid p-3" alt="@Model.ProductName" style="max-height: 300px; object-fit: cover;">
                }
                else
                {
                    <div class="d-flex flex-column align-items-center justify-content-center p-3">
                        <i class="fas fa-image fa-5x text-muted mb-2"></i>
                        <span class="text-muted">No Image Available</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title fw-bold">@Model.ProductName</h3>
                    <p class="card-text text-muted mb-2"><strong>Product ID:</strong> @Model.Id</p>
                    <p class="card-text mb-3">@Model.Description</p>
                    <p class="card-text mb-2"><strong>Price:</strong> <span class="text-success">@Model.Price.ToString("C")</span></p>
                    <p class="card-text mb-2">
                        <strong>Stock Available:</strong>
                        <span class="badge bg-@(Model.StockAvailable > 10 ? "success" : Model.StockAvailable > 0 ? "warning" : "danger")">
                            @Model.StockAvailable
                        </span>
                    </p>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>